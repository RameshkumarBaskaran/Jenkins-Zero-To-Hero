provider "google" {
  project     = "My First Project"
  region      = "us-central1"
  credentials = file("gcp-key.json")
}

resource "google_compute_instance" "vm_instance" {
  name         = "jenkins-vm"
  machine_type = "e2-micro"
  zone         = "us-central1-a"

  boot_disk {
    initialize_params {
      image = "debian-cloud/debian-11"
    }
  }

  network_interface {
    network = "default"
    access_config {}
  }
}
